# Example .env file for Khoj Backend
# Copy this to your backend/.env file and fill in the values

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/khoj

# Session Secret (change this to a random string)
SESSION_SECRET=your-secret-key-change-this-to-something-random

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Resend API Key for Email Notifications
# Get your API key from: https://resend.com/api-keys
# The key starts with "re_"
RESEND_API_KEY=re_your_resend_api_key_here

# Node Environment
NODE_ENV=development

# Server Port (optional, defaults to 5001)
PORT=5001

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
